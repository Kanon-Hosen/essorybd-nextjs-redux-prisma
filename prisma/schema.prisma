generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model product {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  description  String
  image        String
  category     String   @unique
  price        String
  discount     String?
  discountType String?
  quantity     String
  stockType    stock    @default(IN_STOCK)
  tags         String
  status       status   @default(PUBLISHED)
  totalReview  Int      @default(0)
  reviewPoints Int      @default(0)
  // Category     category @relation(fields: [categoryId], references: [id])
  // categoryId   String   @db.ObjectId
}

enum status {
  PUBLISHED
  DRAFT
}

enum stock {
  IN_STOCK
  OUT_OF_STOCK
}

model category {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  SubCategory String
  // Product     product[]
}

model users {
  id       String         @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String         @unique
  phone    String?
  address  String?
  verified verifiedStatus @default(FALSE)
  role     Role           @default(USER)
}

enum verifiedStatus {
  TRUE
  FALSE
}

enum Role {
  USER
  ADMIN
}

